<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.Button_Custom" parent="android:Widget">


        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>



        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#42A5F5</item>




        <item name="android:background">@drawable/button</item>
    </style>

    <style name="Widget.Button_Custom_lan" parent="android:Widget">


        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>



        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#42A5F5</item>




        <item name="android:background">@drawable/button</item>
    </style>


    <style name="Widget.Button_Currency" parent="android:Widget">



        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#42A5F5</item>




        <item name="android:background">@drawable/button</item>
    </style>


    <style name="Widget.Button_Currency_lan" parent="android:Widget">



        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#42A5F5</item>




        <item name="android:background">@drawable/button</item>
    </style>

</resources>
